{
   // UI and Appearance
   "workbench.colorTheme": "Default Light Modern",
   "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-light",
   "workbench.activityBar.location": "top",
   "workbench.statusBar.visible": false,
   "workbench.layoutControl.enabled": false,
   "workbench.navigationControl.enabled": false,
   "workbench.sideBar.location": "right",
   "workbench.list.smoothScrolling": true,
   "workbench.startupEditor": "none",
   "workbench.tips.enabled": false,
   "workbench.tree.indent": 14,
   "workbench.tree.renderIndentGuides": "none",
   "workbench.tree.enableStickyScroll": false,
   "workbench.editor.enablePreview": false,

   // Text Editor
   "editor.fontFamily": "JetBrains Mono",
   "editor.fontWeight": "400",
   "editor.fontLigatures": true,
   "editor.fontSize": 13,
   "editor.tabSize": 3,
   "editor.cursorSmoothCaretAnimation": "on",
   "editor.smoothScrolling": true,
   "editor.minimap.enabled": false,
   "editor.unicodeHighlight.nonBasicASCII": false,
   "editor.hover.delay": 1000,
   "editor.hover.enabled": true,
   "editor.colorDecorators": false,
   "editor.lightbulb.enabled": "off",
   "editor.selectionHighlight": true,
   "editor.overviewRulerBorder": false,
   "editor.renderLineHighlight": "none",
   "editor.occurrencesHighlight": "off",
   "editor.renderControlCharacters": false,
   "editor.hideCursorInOverviewRuler": true,
   "editor.copyWithSyntaxHighlighting": false,
   "editor.emptySelectionClipboard": false,
   "editor.snippetSuggestions": "top",
   "editor.detectIndentation": false,
   "editor.bracketPairColorization.enabled": false,
   "editor.stickyScroll.enabled": false,
   "editor.formatOnSave": false,
   "editor.codeActionsOnSave": {
     "source.fixAll.eslint": "explicit",
     "source.organizeImports": "never"
   },

   // Terminal
   "terminal.integrated.fontSize": 13,
   "terminal.integrated.smoothScrolling": true,
   "terminal.explorerKind": "integrated",
   "terminal.integrated.defaultProfile.osx": "fish",
   "terminal.integrated.fontFamily": "JetBrains Mono",
   "terminal.integrated.gpuAcceleration": "auto",

   // File System
   "files.autoSaveDelay": 500,
   "files.autoSave": "afterDelay",
   "files.exclude": {
      "**/.DS_Store": false,
      "**/.git": false,
      "**/.hg": false,
      "**/.svn": false,
      "**/CVS": false,
      "**/Thumbs.db": false,
      "**/.idea": false,
      "**/.vscode": false
   },
   "files.associations": {
      "docker-compose.y*ml": "yaml"
   },
   "files.trimTrailingWhitespace": true,
   "files.insertFinalNewline": true,
   "files.trimFinalNewlines": true,

   // Windows and Interface
   "window.titleBarStyle": "custom",
   "window.newWindowDimensions": "inherit",
   "window.nativeFullScreen": true,
   "window.commandCenter": false,

   // Problems and Display
   "problems.decorations.enabled": false,
   "breadcrumbs.enabled": false,
   "explorer.confirmDelete": false,

   // Git and SCM
   "git.decorations.enabled": false,
   "scm.diffDecorations": "none",
   "diffEditor.ignoreTrimWhitespace": false,
   "diffEditor.renderSideBySide": false,

   // Language-specific Formatting
   "[typescriptreact]": {},
   "[typescript]": {},
   "[javascript]": {},
   "[json]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "vscode.json-language-features"
   },
   "[go]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "golang.go"
   },
   "[dockercompose]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter"
   },
   "[yaml]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter"
   },
   "[toml]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "be5invis.toml"
   },

   // Go-specific Settings
   "go.lintTool": "golangci-lint",
   "go.lintFlags": [
      "--fast"
   ],
   "go.toolsManagement.autoUpdate": true,

   // ESLint Settings
   "prettier.enable": false,
   "eslint.rules.customizations": [
     { "rule": "style/*", "severity": "off", "fixable": true },
     { "rule": "format/*", "severity": "off", "fixable": true },
     { "rule": "*-indent", "severity": "off", "fixable": true },
     { "rule": "*-spacing", "severity": "off", "fixable": true },
     { "rule": "*-spaces", "severity": "off", "fixable": true },
     { "rule": "*-order", "severity": "off", "fixable": true },
     { "rule": "*-dangle", "severity": "off", "fixable": true },
     { "rule": "*-newline", "severity": "off", "fixable": true },
     { "rule": "*quotes", "severity": "off", "fixable": true },
     { "rule": "*semi", "severity": "off", "fixable": true }
   ],
   "eslint.validate": [
     "javascript",
     "javascriptreact",
     "typescript",
     "typescriptreact",
     "vue",
     "html",
     "markdown",
     "json",
     "jsonc",
     "yaml",
     "toml",
     "xml",
     "gql",
     "graphql",
     "astro",
     "svelte",
     "css",
     "less",
     "scss",
     "pcss",
     "postcss"
   ],

   // Additional Extensions
   "chat.commandCenter.enabled": false,
   "redhat.telemetry.enabled": false,
   "wakatime.apiKey": "API_KEY",

   // Custom CSS and JS Loader
   "vscode_custom_css.imports": [
      "file:path"
   ]
}
